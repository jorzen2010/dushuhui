@model StaticPagedList<dushuhuiEntity.Book>
@using PagedList;
@using PagedList.Mvc;


<div class="container" style="margin-top:80px">

    <div class="row">
        <div class="col-md-8">
            <h3>陪读书单</h3>
            <div class="row">

                @foreach (var item in Model)
{
    <div class="col-md-3 text-center shudan" onclick="ToUrl(@item.Id)">

        <img src="@item.Cover" alt="..." class="img-thumbnail" style="width:100%">
        <h4>@item.BookName</h4>
    </div>

}
            </div>
            <div class="box-footer clearfix  text-center">
                <ul class="pagination pagination-sm no-margin">
                    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { type = Request.QueryString["type"], page = page }),
                            new PagedListRenderOptions
                            {
                                LinkToPreviousPageFormat = "上一页",
                                LinkToNextPageFormat = "下一页",
                                DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded,
                                DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded,
                                DisplayLinkToPreviousPage = PagedListDisplayMode.IfNeeded,
                                DisplayLinkToNextPage = PagedListDisplayMode.IfNeeded,
                                MaximumPageNumbersToDisplay = 5,
                                LinkToFirstPageFormat = "首页",
                                LinkToLastPageFormat = "最后一页",
                                PageCountAndCurrentLocationFormat = "第 {0}页 共 {1}页"
                            })
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <h3>创始人说</h3>
            <div class="row">
                <div class="col-md-12">
                    <img src="/Resource/img/shu.png" alt="..." class="img-thumbnail" style="width:100%">
                </div>
            </div>
        </div>
    </div>

</div>


@section BottomScripts {
    <script type="text/javascript">
        $('.shudan').on("mouseover", function () {
            $(this).addClass("shudan-active");
            // alert("asdf");
        }).on("mouseout", function () {
            $(this).removeClass("shudan-active");

        });
        function ToUrl(id) {
            var tourl = "/Home/Shu?bid=" + id
            window.location.href = tourl;
        }
    </script>
}
